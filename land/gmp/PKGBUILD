pkgname=gmp
pkgver=6.2.0
pkgrel=1
pkgdesc="GMP is a free library for arbitrary precision arithmetic, operating on signed integers, rational numbers, and floating-point numbers."
arch=('i786')
url="https://gmplib.org"
source=(
	'https://gmplib.org/download/gmp/gmp-6.2.0.tar.xz'
	'gmp-6.2.0.patch'
)
sha256sums=(
	'258e6cd51b3fbdfc185c716d55f82c08aff57df0c6fbd143cf6ed561267a1526'
	'SKIP'
)

prepare() {
	cd $pkgname-$pkgver
	rm configfsf.sub
	autoreconf --force --install
	echo -e "#!/bin/sh\necho i786-pc-xelix" > config.sub
	#patch -p0 < ../gmp-6.2.0.patch
	#cp /tmp/aclocal.m4 aclocal.m4
}

build() {
	cd $pkgname-$pkgver
#	CC=i786-pc-xelix-gcc ac_cv_can_build_shared=1 ./configure \
	./configure \
		--host=i786-pc-xelix \
		--prefix=/usr \
		--sysconfdir=/etc \
		--enable-shared \
		--enable-static
#		--disable-static

	make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR=$pkgdir install
}
